#define INSTALL_PREFIX "${CMAKE_INSTALL_PREFIX}"
#define UNITY_QT_DIR "${UNITY_QT_DIR}"
#define UNITY_DIR "/usr/share/unity/"

#include <QCoreApplication>

static bool isRunningInstalled = QCoreApplication::applicationDirPath() == INSTALL_PREFIX "/bin";

inline QString unityQtDirectory() {
    if (isRunningInstalled) {
        return QString(INSTALL_PREFIX "/" UNITY_QT_DIR);
    }
    else {
        return QString(QCoreApplication::applicationDirPath()+"/../../");
    }
}

inline QString unityQtImportPath() {
    if (isRunningInstalled) {
        return QString(INSTALL_PREFIX "/lib/qt4/imports");
    }
    else {
        return QString(QCoreApplication::applicationDirPath()+"/../");
    }
}
